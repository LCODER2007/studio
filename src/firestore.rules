
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /users/{userId} {
      // Allow anyone to read user profiles.
      allow read: if true;
      // Allow only the owner to write to their profile.
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    match /suggestions/{suggestionId} {
      // Allow anyone to read suggestions. This is required for the public suggestion list.
      allow get, list: if true; 
      
      // Allow authenticated users to create suggestions.
      // The author UID in the new document must match the creator's UID.
      allow create: if isSignedIn() && request.resource.data.authorUid == request.auth.uid;

      // Allow updates if the user is authenticated (for upvoting) or an admin.
      allow update: if isSignedIn();
      
      // Only the author or an admin can delete a suggestion.
      allow delete: if isSignedIn() && (resource.data.authorUid == request.auth.uid || isAdmin());

      // Rules for comments subcollection
      match /comments/{commentId} {
          // Allow anyone to read and list comments
          allow read, list: if true;
          // Allow authenticated users to create comments
          allow create: if isSignedIn() && request.resource.data.authorUid == request.auth.uid;
          // Only the comment author or an admin can update/delete
          allow update, delete: if isSignedIn() && (resource.data.authorUid == request.auth.uid || isAdmin());
      }
    }
    
    // Rules for user-specific voting records within a subcollection.
    match /users/{userId}/user_votes/{suggestionId} {
       function isOwner() {
        return request.auth.uid == userId;
      }
      // Allow a user to check their own votes for the transaction.
      allow get: if isSignedIn() && isOwner(); 
      // Allow a user to create a vote document for themselves.
      allow create: if isSignedIn() && isOwner();
      // Allow a user to read their own votes for the UI.
      allow list: if isSignedIn() && isOwner();
      // Prevent updates/deletes to maintain vote integrity.
      allow update, delete: if false;
    }
  }
}
