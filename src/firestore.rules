
rules_version = '2';

// This is a link to create the composite index needed for filtering and sorting suggestions.
// Please click it and create the index in your Firebase console.
// https://console.firebase.google.com/project/studio-2819594368-36cb9/firestore/indexes/composite/create?collectionId=suggestions&fields=category,ASC;submissionTimestamp,DESC&fields=category,ASC;upvotesCount,DESC

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      function isOwner() {
        return request.auth.uid == userId;
      }
      allow read, write: if isSignedIn() && isOwner();
    }

    match /suggestions/{suggestionId} {
      // Allow anyone to read suggestions. This is required for the public suggestion list.
      allow get, list: if true; 
      
      // Allow authenticated users to create suggestions.
      // The author UID in the new document must match the creator's UID.
      allow create: if isSignedIn() && request.resource.data.authorUid == request.auth.uid;
      
      function isAdmin() {
        // In a real app, you might check for a custom claim or a role in the user's doc
        return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      }

      // Allow updates if the user is authenticated (for upvoting) or an admin.
      allow update: if isSignedIn();
      
      // Only the author or an admin can delete a suggestion.
      allow delete: if isSignedIn() && (request.auth.uid == resource.data.authorUid || isAdmin());
    }
    
    // Rules for user-specific voting records within a subcollection.
    match /users/{userId}/user_votes/{suggestionId} {
       function isOwner() {
        return request.auth.uid == userId;
      }
      // Allow a user to check their own votes for the transaction.
      allow get: if isSignedIn() && isOwner(); 
      // Allow a user to create a vote document for themselves.
      allow create: if isSignedIn() && isOwner();
      // Allow a user to read their own votes for the UI.
      allow list: if isSignedIn() && isOwner();
      // Prevent updates/deletes to maintain vote integrity.
      allow update, delete: if false;
    }

    // Rules for the comments subcollection under each suggestion.
    match /suggestions/{suggestionId}/comments/{commentId} {
        // Anyone can read comments.
        allow get, list: if true;

        // An authenticated user can create a comment.
        // The author UID must match the person creating it.
        allow create: if isSignedIn() && request.resource.data.authorUid == request.auth.uid;

        // Only the author of the comment or an admin can update or delete it.
        allow update, delete: if isSignedIn() && (resource.data.authorUid == request.auth.uid || isAdmin());
    }
  }
}
