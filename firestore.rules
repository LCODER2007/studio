
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      function isOwner() {
        return request.auth.uid == userId;
      }
      allow read, write: if isSignedIn() && isOwner();
    }

    match /suggestions/{suggestionId} {
      allow get, list: if true; // Allow anyone to read suggestions
      allow create: if isSignedIn() && request.resource.data.authorUid == request.auth.uid;
      
      function isAdmin() {
        // In a real app, you might check for a custom claim or a role in the user's doc
        return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      }

      // Allow updates for upvoting, or if the user is the author or an admin.
      allow update: if isSignedIn();
      allow delete: if isSignedIn() && (request.auth.uid == resource.data.authorUid || isAdmin());
    }
    
    // Rules for the user-specific voting records.
    match /users/{userId}/user_votes/{suggestionId} {
       function isOwner() {
        return request.auth.uid == userId;
      }
      // Allow a user to check their own votes for the transaction.
      allow get, create: if isSignedIn() && isOwner(); 
      // Allow a user to read their own votes for the UI.
      allow list: if isSignedIn() && isOwner();
      // Prevent updates/deletes to maintain vote integrity.
      allow update, delete: if false;
    }
  }
}
